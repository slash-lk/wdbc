<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to YelpCamp!</h1>
        <div class="container">
            <p>View our campgrounds from around the world</p>
            
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campgrounds</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap">
        <% campgrounds.forEach(function(campground) { %>
           <div class="col-md-3 col-sm-6">
               <div class="thumbnail">
                   <img src="<%= campground.image %>">
                   <div class="caption"><%= campground.name %></div>
                    <p>
                       <a href="/campgrounds/<%=campground.id%>" class="btn btn-primary">More Info</a>
                   </p>
               </div> 
            </div>
    <% }) %>
    </div>


</div>

<% include ../partials/footer %>